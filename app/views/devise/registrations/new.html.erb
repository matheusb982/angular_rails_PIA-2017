<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="col-lg-12">
          <div class="text-center color-elements">
          <h2>Registre-se </h2>
          </div>
        </div>
        <div class="col-lg-12 col-md-12">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="row">
              <div class="col-sm-6 height-contact-element">
                <div class="form-group">
                  <%= f.input :email, required: false, autofocus: true, wrapper: false,label: false, type: "email", placeholder: "Email", input_html: { class: 'form-control custom-labels' }%>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-sm-6 height-contact-element">
                <div class="form-group">
                  <%= f.input :password, required: false, autofocus: true, wrapper: false,label: false, type: "password", placeholder: "Senha", input_html: { class: 'form-control custom-labels' }, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-sm-6 height-contact-element">
                <div class="form-group">
                  <%= f.input :password_confirmation, required: false, autofocus: true, wrapper: false,label: false, type: "password", placeholder: "COnfirmar Senha", input_html: { class: 'form-control custom-labels' }%>
                  <p class="help-block text-danger"></p>
                </div>
              </div>

              <div class="col-sm-3 col-xs-6 height-contact-element">
                <div class="form-group">
                  <%= button_tag(type: 'submit',data: { disable_with: "AGUARDE..." }, class: "btn btn-md btn-custom btn-noborder-radius") do %>
                    Criar <i class="mdi-content-save"></i>
                  <% end %>
                </div>
                <%= render "devise/shared/links" %>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
